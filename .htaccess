RewriteEngine On

# Let existing files and directories pass through
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route PHP entry requests (e.g., cart.php, product-details.php) to index router
RewriteRule ^([A-Za-z0-9_-]+)\.php$ index.php?page=$1 [L,QSA]
