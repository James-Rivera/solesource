# Core app
APP_ENV=local
APP_DEBUG=true
BASE_URL=http://localhost/solesource

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=solesource
DB_USER=root
DB_PASS=changeme

# Mail (required; no fallbacks)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_smtp_user
MAIL_PASS=your_smtp_pass
MAIL_SECURE=tls
MAIL_FROM_EMAIL=no-reply@example.com
MAIL_FROM_NAME=SoleSource

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_BASE_URL=https://api-m.sandbox.paypal.com

# AI Assistant
AI_PROVIDER=ollama
AI_MODEL=gpt-oss:20b-cloud
AI_API_KEY=                 # not used for ollama; required if AI_PROVIDER=api
GEMINI_API_KEY=             # used only if AI_PROVIDER=gemini
OLLAMA_BASE_URL=http://localhost:11434
AI_SYSTEM_PROMPT=           # optional override; defaults to structured JSON schema

# Email queue worker tuning (optional)
EMAIL_QUEUE_BATCH=10
EMAIL_QUEUE_MAX_ATTEMPTS=3

# Misc
MAIL_DEBUG_DUMP=           # optional path to dump raw MIME for debugging
